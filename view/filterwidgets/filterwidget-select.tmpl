{extends "ext/search/view/filterwidgets/filterwidget-wrap.tmpl"}

{block name="widgetbody"}
	<span>
		<select class="select value" {if $definitions.wConf.multiple == true}multiple="multiple"{/if} size="{$definitions.wConf.size}" onchange="Todoyu.Ext.search.Filter.updateConditionValue('{$definitions.widgetID}', $F(this));">
		{if $definitions.wConf.size == 1}<option value="0">tmp_please_choose</option>{/if}

		{foreach $definitions.options opt_id opt_array}
			<option value="{$opt_id}" {if $opt_array.selected == true}selected="selected"{/if}>{$opt_array.label}</option>
		{/foreach}

		</select>
	</span>
{/block}
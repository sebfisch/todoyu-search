{extends "ext/search/view/filterwidgets/filterwidget-wrap.tmpl"}

{block name="widgetbody"}
	<span>
		<input id="filterwidget-dateinput-{$definitions.widgetID}" type="text" class="input value" value="{$definitions.value}" onchange="Todoyu.Ext.search.Filter.updateConditionValue( '{$definitions.widgetID}', $F(this))"/>
		<span id="filterwidget-dateinput-{$definitions.widgetID}-button" class="calendaricon"></span>
	</span>
	<script type="text/javascript">
		Calendar.setup({
			inputField : "filterwidget-dateinput-{$definitions.widgetID}", // id of the input field
			range : [1990, 2020], // allowed years
			ifFormat : "%d.%m.%Y", // format of the input field
			button : "filterwidget-dateinput-{$definitions.widgetID}-button", // trigger for the calendar (button ID)
			firstDay : 1
		});
	</script>
{/block}
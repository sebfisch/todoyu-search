{extends "ext/search/view/filterwidgets/filterwidget-wrap.tmpl"}

{block name="widgetbody"}
	{if $definitions.wConf.autocomplete == true}
		<input type="text" title="{Label core.input.autocompleter}" class="input autocomplete" id="widget-autocompleter-{$definitions.widgetID}" value="{$definitions.value_label}" />
		<div id="widget-autocompleter-{$definitions.widgetID}-suggestions" class="acResultContainer"></div>
		<input id="widget-autocompleter-{$definitions.widgetID}-hidden" type="hidden" class="hidden value" onchange="Todoyu.Ext.search.Filter.updateConditionValue('{$definitions.widgetID}', $F(this))" value="{$definitions.value}" />
	{else}
		<input type="text" class="input value" onkeyup="Todoyu.Ext.search.FilterWidget.onTextEntered(this)" value="{$definitions.value}" />
	{/if}
{/block}
{extends "ext/search/view/filterwidgets/filterwidget-wrap.tmpl"}

{block name="widgetbody"}

	<span>
		<label>User Role</label>
		{select options=$definitions.options value=$definitions.valueUserroles id="filterwidget-select-$definitions.widgetID" multiple=$definitions.wConf.multiple size=$definitions.wConf.size onchange="Todoyu.Ext.project.Filter.onProjectroleRoleChange('$definitions.widgetID')"}
	</span>

	<span>
		<label>User</label>
		<input type="text" title="{Label core.input.autocompleter}" class="input autocomplete" id="widget-autocompleter-{$definitions.widgetID}" value="{$definitions.valueUserLabel}" />
		<div id="widget-autocompleter-{$definitions.widgetID}-suggestions" class="acResultContainer"></div>
		<input id="widget-autocompleter-{$definitions.widgetID}-hidden" type="hidden" class="hidden value" value="{$definitions.valueUser}" />
	</span>

	<script>
		Todoyu.Ext.search.Filter.WidgetArea.addSpecialConfig('{$definitions.widgetID}', {$definitions.specialConfig});
	</script>

{/block}
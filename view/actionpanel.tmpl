<div class="buttons">
	{Button label="search.panelwidget-searchfilterlist.clearFilterArea" class="clearFilterArea" onclick="Todoyu.Ext.search.PanelWidget.SearchFilterList.clearFilterArea()"}
{restrict 'search' 'filtersets:save'}
	{Button label="search.panelwidget-searchfilterlist.saveFilterButton" class="saveAsNewFilter" onclick="Todoyu.Ext.search.PanelWidget.SearchFilterList.saveCurrentAreaAsNewFilterset()"}
{/restrict}

	{foreach $exports name data}
		{if allowed($data.right.ext, $data.right.right)}
			{Button label="$data.label"  onclick="Todoyu.Ext.search.ActionPanel.exportResults('$name')" class="searchExportButton $data.htmlClass" id="export-$name"}
		{/if}
	{/foreach}
</div>